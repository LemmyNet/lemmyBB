{{> components/header }}

    <h2 class="memberlist-title">{{{i18n site_data "view_user_profile_title" (user_name person.person_view.person)}}}</h2>

    <div class="panel bg1">
        <div class="inner">

            {{#if person.person_view.person.avatar}}
            <dl class="left-box">
                <dt class="profile-avatar"><img src="{{person.person_view.person.avatar}}?thumbnail=120" width="120" height="120" alt="User avatar" /></dt>
            </dl>
            {{/if}}

            <dl class="left-box details profile-details">
                <dt>{{{i18n site_data "username"}}}</dt>
                <dd><a href="{{person.person_view.person.actor_id}}">{{{user_actor_id person.person_view.person}}}</a></dd>

                {{#if person.person_view.person.admin}}
                    <dt>&nbsp;</dt>
                    <dd class="administrator-badge">Administrator</dd>
                {{/if}}

                {{#if person.person_view.person.banned}}
                    <dt>&nbsp;</dt>
                    <dd class="banned-badge">Banned</dd>
                {{/if}}
            </dl>

        </div>
    </div>

    <div class="panel bg2">
        <div class="inner">

            <div class="column1">
                <h3>{{{i18n site_data "contact_user" person.person_view.person.name}}}</h3>

                <dl class="details">
                    <dt>{{{i18n site_data "pm"}}}</dt>
                    <dd><a href="/private_messages_editor?u={{person.person_view.person.id}}">{{{i18n site_data "send_private_message"}}}</a></dd>
                </dl>
            </div>

            <div class="column2">
                <h3>{{{i18n site_data "user_statistics"}}}</h3>
                <dl class="details">
                    <dt>{{{i18n site_data "joined"}}}</dt> <dd>{{timestamp_human person.person_view.person.published}}</dd>
                    <dt>{{{i18n site_data "total_posts"}}}</dt>
                    <dd>{{person.person_view.counts.post_count}}</dd>
                    <dt>{{{i18n site_data "total_comments"}}}</dt>
                    <dd>{{person.person_view.counts.comment_count}}</dd>
                </dl>
            </div>

        </div>
    </div>

{{> components/footer }}